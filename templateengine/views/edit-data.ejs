<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h1>Form Edit Kontak</h1>

      <% if(typeof errors !='undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <form method="POST" action="/contact?_method=PUT">
        <input type="hidden" name="_id" value="<%= contact._id %>" />
        <input
          type="hidden"
          name="oldNama"
          value="<%= contact.oldNama || contact.nama %>"
        />

        <div class="mb-3">
          <label for="Nama" class="form-label">Nama</label>
          <input
            type="text"
            class="form-control"
            id="nama"
            name="nama"
            value="<%= contact.nama %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="no hp" class="form-label">no hp</label>
          <input
            type="text"
            class="form-control"
            id="nohp"
            name="nohp"
            value="<%= contact.nohp %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="Email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            value="<%= contact.email %>"
            required
          />
        </div>

        <button type="submit" class="btn btn-primary">Ubah data kontak</button>
      </form>
    </div>
  </div>
</div>
