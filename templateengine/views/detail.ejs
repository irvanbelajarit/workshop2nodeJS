<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Contact</h2>

      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%=contact.nama%></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%=contact.nohp%></h6>
          <p class="card-text"><%=contact.email%></p>

          <a href="/contact/edit/<%= contact._id %>" class="btn btn-info badge"
            >Edit</a
          >

          <form action="/contact?_method=DELETE" method="POST" class="d-inline">
            <input type="hidden" name="id" value="<%= contact._id %>" />
            <button
              type="submit"
              class="btn btn-danger badge"
              onclick="return confirm('yakin akan menghapus?')"
            >
              delete
            </button>
          </form>
          <br />
          <a href="/contact" class="card-link">Kembali Ke daftar Kontak</a>
        </div>
      </div>
    </div>
  </div>
</div>
